{% extends 'base.html.twig' %}

{% block title %}New Category
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1>Create New Category</h1>

		{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
		<div class="form-group">
			{{ form_label(form.name, null, {'label_attr': {'class': 'control-label'}}) }}
			<div class="col-sm-10">
				{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(form.name) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.description, null, {'label_attr': {'class': 'control-label'}}) }}
			<div class="col-sm-10">
				{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(form.description) }}
			</div>
		</div>

		<button type="submit" class="btn btn-success">Create</button>
		{{ form_end(form) }}

		<a href="{{ path('admin_categories') }}" class="btn btn-secondary mt-3">Back</a>
	</div>
{% endblock %}

