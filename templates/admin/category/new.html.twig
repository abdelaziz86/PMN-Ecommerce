{% extends 'base.html.twig' %}

{% block title %}Create New Category
{% endblock %}

{% block body %}
	<h1 style="margin-top : 60px">Create New Category</h1>

	{{ form_start(form) }}
	<div class="form-group">
		{{ form_label(form.name) }}
		{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.name) }}
	</div>

	<div class="form-group">
		{{ form_label(form.description) }}
		{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.description) }}
	</div>

	<button type="submit" class="btn btn-primary" style="margin-top : 20px">Create Category</button>
	{{ form_end(form) }}

	<a href="{{ path('admin_categories') }}" class="btn btn-secondary" style="margin-top : 20px">Back to Categories</a>

	{% for message in app.flashes('success') %}
		<div class="alert alert-success">{{ message }}</div>
	{% endfor %}
{% endblock %}

