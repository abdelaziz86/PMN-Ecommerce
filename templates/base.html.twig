<!-- templates/base.html.twig -->
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
	</head>
	<body style="background: linear-gradient(135deg, #FAF5DE, #FAF8EC, #E6E2CF); min-height: 100vh;">
		<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #E8E8E8 !important; padding-left: 20px">
			<a class="navbar-brand" href="/" style="color: #E68A00; font-weight: bold;">
				<img src="{{ asset('aliexpress.png') }}" style="width : 200px" />
			</a>
			<div class="collapse navbar-collapse">
				<ul class="navbar-nav ml-auto">
					{% if is_granted('ROLE_ADMIN') %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('admin_categories') }}" style="color: #333;">Categories</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('admin_products') }}" style="color: #333;">Products</a>
						</li>
					{% endif %}

					{% if app.user %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('user_profile') }}" style="color: #333;">Profile</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_logout') }}" style="color: #333;">Logout</a>
						</li>
					{% else %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_login') }}" style="color: #333;">Login</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_register') }}" style="color: #333;">Sign Up</a>
						</li>
					{% endif %}
				</ul>
			</div>
		</nav>

		<div class="container"> {% block body %}{% endblock %}
			</div>

			<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
		</body>
	</html>

