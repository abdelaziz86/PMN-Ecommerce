{# templates/catalog/product_detail.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}
	{{ product.name }}
	- Product Details
{% endblock %}

{% block body %}
	<div class="container" style="margin-top: 60px; background-color: white; padding : 30px; border-radius : 20px; box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;">
		<h1>{{ product.name }}</h1>
		<div class="row">
			<div class="col-md-6">
				<img src="{{ asset('images/' ~ product.image) }}" class="img-fluid" alt="{{ product.name }}">
			</div>
			<div class="col-md-6">
				<h5>Description</h5>
				<p>{{ product.description }}</p>
                <h5>Quantity</h5>
				<p>{{ product.quantity }}</p>
				<h5>Price:
					<span style="color: green; margin-left : 10px">
                        ${{ product.price | number_format(2, '.', ',') }}
                    </span> 
                </h5>
				<a href="{{ path('catalog') }}" style="margin-top : 20px" class="btn btn-primary">Back to Catalog</a>
			</div>
		</div>
	</div>
{% endblock %}

