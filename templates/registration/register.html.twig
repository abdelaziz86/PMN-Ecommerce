{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1 class="mb-4">Register</h1>

		{# Display flash messages for success and errors #}
		{% for message in app.session.flashBag.get('success') %}
			<div class="alert alert-success">{{ message }}</div>
		{% endfor %}

		{% for message in app.session.flashBag.get('error') %}
			<div class="alert alert-danger">{{ message }}</div>
		{% endfor %}

		{# Registration form #}
		<form method="post">
			{{ form_start(registrationForm, { 'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'} }) }}

            <div class="mb-3">
                {{ form_row(registrationForm.name, { 'attr': { 'class': 'form-control', 'placeholder': 'Name' } }) }}
                {# {% if registrationForm.plainPassword.vars.errors|length > 0 %}
                                    <div class="text-danger">
                                        {% for error in registrationForm.plainPassword.vars.errors %}
                                            <small>{{ error.message }}</small>
                                        {% endfor %}
                                    </div>
                                {% endif %} #}
            </div>

            <div class="mb-3">
                {{ form_row(registrationForm.surname, { 'attr': { 'class': 'form-control', 'placeholder': 'Surname' } }) }}
                {# {% if registrationForm.confirmPassword.vars.errors|length > 0 %}
                                    <div class="text-danger">
                                        {% for error in registrationForm.confirmPassword.vars.errors %}
                                            <small>{{ error.message }}</small>
                                        {% endfor %}
                                    </div>
                                {% endif %} #}
            </div>


			<div class="mb-3">
				{{ form_row(registrationForm.email, { 'attr': { 'class': 'form-control', 'placeholder': 'Email' } }) }}
				{# Only display errors manually added in the controller #}
				{# <div class="text-danger">
					{% for error in registrationForm.email.vars.errors %}
						<small>{{ error.message }}</small>
					{% endfor %}
				</div> #}
			</div>

			<div class="mb-3">
				{{ form_row(registrationForm.plainPassword, { 'attr': { 'class': 'form-control', 'placeholder': 'Password' } }) }}
				{# <div class="text-danger">
					{% for error in registrationForm.plainPassword.vars.errors %}
						<small>{{ error.message }}</small>
					{% endfor %}
				</div> #}
			</div>

			<div class="mb-3">
				{{ form_row(registrationForm.confirmPassword, { 'attr': { 'class': 'form-control', 'placeholder': 'Confirm Password' } }) }}
				<div class="text-danger">
					{# {% for error in registrationForm.confirmPassword.vars.errors %}
						<small>{{ error.message }}</small>
					{% endfor %} #}
				</div>
			</div>

			<button type="submit" class="btn btn-primary">Register</button>

			{{ form_end(registrationForm) }}
		</form>
	</div>
{% endblock %}

